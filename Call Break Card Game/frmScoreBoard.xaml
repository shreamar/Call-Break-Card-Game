        <Label x:Name="lblTopBar" Content="Score Board" HorizontalAlignment="Left" Margin="0,69,-0.4,0" VerticalAlignment="Top" Width="534" Foreground="#FF033119" FontFamily="Engravers MT" FontSize="20" FontWeight="Bold" Grid.ColumnSpan="2" Height="34" HorizontalContentAlignment="Center"/>
